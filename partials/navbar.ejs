<script>

  function createTask(){
    var projectId = window.prompt('ProjectId:');
    projectID = parseInt(projectId);
    var assignedTo = window.prompt('AssignedTo:');
    assignedTo = parseInt(assignedTo);
    status = 1;
    var name = window.prompt('Name:');
    name = name.substr(0,20);
    var description = window.prompt('Description:');
    description = description.substr(0,20);

    $.post('/createTask',{project_id:projectId, assigned_to:assignedTo, status:status, name:name, description:description},function(data){
    });
  }

  function logout() {
    var cookies = document.cookie.split(";");

    for (var i = 0; i < cookies.length; i++) {
        var cookie = cookies[i];
        var eqPos = cookie.indexOf("=");
        var name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
        document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT";
    }
    window.location.replace("/");
  }
</script>

